<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Login | MediBook</title>

  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
    rel="stylesheet"
  >

  <style>
    body {
      background: #eef2f6;
    }

    .login-wrapper {
      min-height: 100vh;
    }

    .login-card {
      border-radius: 18px;
      border: none;
    }

    .brand-link {
      text-decoration: none;
      font-weight: 700;
      font-size: 20px;
      color: #1e293b;
    }

    .brand-link:hover {
      color: #2563eb;
    }

    .btn-primary {
      border-radius: 10px;
      font-weight: 600;
    }

    .muted-links a {
      text-decoration: none;
    }

    .muted-links a:hover {
      text-decoration: underline;
    }
  </style>
</head>

<body>

<div class="container d-flex flex-column justify-content-center align-items-center login-wrapper">

  <!-- Brand / Home Link -->
  <div class="mb-4">
    <a href="/" class="brand-link">MediBook</a>
  </div>

  <div class="card shadow-sm login-card p-4" style="max-width: 420px; width:100%;">

    <h4 class="fw-semibold text-center mb-4">
      Sign in to your account
    </h4>

    <!-- INFO: Verification Email Sent -->
    <% if (typeof query !== "undefined" && query.info === "verify_email") { %>
      <div class="alert alert-info">
        Please check your email to verify your account.
      </div>
    <% } %>

    <!-- SUCCESS: Verified -->
    <% if (typeof query !== "undefined" && query.success === "verified") { %>
      <div class="alert alert-success">
        Email verified successfully. You can now login.
      </div>
    <% } %>

    <!-- ERROR: Invalid Token -->
    <% if (typeof query !== "undefined" && query.error === "invalid_token") { %>
      <div class="alert alert-danger">
        Invalid or expired verification link.
      </div>
    <% } %>

    <!-- ERROR: Login Error -->
    <% if (error) { %>
      <div class="alert alert-danger">
        <%= error %>
      </div>
    <% } %>

    <form method="POST" action="/login">

      <div class="mb-3">
        <label class="form-label">Email</label>
        <input
          name="email"
          type="email"
          class="form-control"
          required
        >
      </div>

      <div class="mb-4">
        <label class="form-label">Password</label>
        <input
          name="password"
          type="password"
          class="form-control"
          required
        >
      </div>

      <div class="d-grid">
        <button class="btn btn-primary">
          Login
        </button>
      </div>

    </form>

    <hr class="my-4">

    <div class="text-center muted-links small">
      <div class="mb-2 text-muted">
        New to MediBook?
      </div>

      <a href="/register" class="d-block fw-semibold mb-1">
        Create Patient Account
      </a>

      <a href="/practitioner/register" class="text-muted">
        Apply as Practitioner
      </a>
    </div>

  </div>

</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
