<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <title>My Appointments | MediBook</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

  <style>
    .booking-card {
      border-radius: 16px;
    }

    .status-badge {
      font-size: 0.85rem;
      padding: 6px 10px;
      border-radius: 20px;
      text-transform: capitalize;
    }

    .status-booked {
      background-color: #198754;
      color: #fff;
    }

    .status-cancelled {
      background-color: #6c757d;
      color: #fff;
    }
  </style>
</head>

<body class="bg-light">

<!-- NAVBAR -->
<nav class="navbar navbar-dark bg-dark">
  <div class="container">
    <a class="navbar-brand fw-bold" href="/patient">MediBook</a>
    <a href="/patient" class="btn btn-outline-light btn-sm">Dashboard</a>
  </div>
</nav>

<div class="container py-5" style="max-width: 1000px;">

  <!-- HEADER -->
  <div class="mb-4">
    <h3 class="fw-bold mb-1">My Appointments</h3>
    <p class="text-muted mb-0">
      View your upcoming and past appointments.
    </p>
  </div>

  <% if (bookings.length === 0) { %>

    <!-- EMPTY STATE -->
    <div class="card shadow-sm p-5 text-center booking-card">
      <h5 class="fw-bold mb-2">No appointments yet</h5>
      <p class="text-muted mb-4">
        You haven‚Äôt booked any appointments yet.
      </p>

      <a href="/patient/book" class="btn btn-success px-4">
        Book Your First Appointment
      </a>
    </div>

  <% } else { %>

    <!-- BOOKINGS LIST -->
    <div class="row g-4">

      <% bookings.forEach(b => { %>

        <div class="col-md-6">
          <div class="card shadow-sm booking-card h-100">
            <div class="card-body p-4">

              <!-- SERVICE -->
              <h5 class="fw-bold mb-2">
                <%= b.service %>
              </h5>

              <!-- PRACTITIONER -->
              <p class="text-muted mb-3">
                With <strong><%= b.practitioner %></strong>
              </p>

              <!-- DATE & TIME -->
              <div class="mb-3">
                <div>
                  üìÖ <%= new Date(b.booking_date).toLocaleDateString() %>
                </div>
                <div>
                  ‚è∞ <%= b.booking_time %>
                </div>
              </div>

              <!-- STATUS -->
              <div class="mb-3">
                <span class="status-badge <%= b.status === 'cancelled' ? 'status-cancelled' : 'status-booked' %>">
                  <%= b.status %>
                </span>
              </div>

              <!-- ACTION -->
             <!-- ACTION -->
<%
  const bookingDate = new Date(b.booking_date);
  const [h, m, s] = b.booking_time.split(":");
  bookingDate.setHours(h, m, s || 0, 0);

  const now = new Date();
  const diffHours = (bookingDate - now) / (1000 * 60 * 60);
  const canCancel = diffHours >= 4;
%>

<% if (b.status !== 'cancelled' && canCancel) { %>
  <form method="POST" action="/patient/bookings/<%= b.id %>/cancel">
    <button class="btn btn-outline-danger btn-sm">
      Cancel Appointment
    </button>
  </form>

<% } else if (b.status !== 'cancelled') { %>
  <button class="btn btn-outline-secondary btn-sm" disabled>
    Cancellation closed
  </button>
  <small class="text-muted d-block mt-1">
    Less than 4 hours remaining
  </small>
<% } %>


            </div>
          </div>
        </div>

      <% }) %>

    </div>

    <!-- CTA -->
    <div class="text-center mt-5">
      <a href="/patient/book" class="btn btn-success px-4">
        Book Another Appointment
      </a>
    </div>

  <% } %>

</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
