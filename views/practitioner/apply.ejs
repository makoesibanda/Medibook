<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <title>Apply as Practitioner | MediBook</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body class="bg-light">

<nav class="navbar navbar-dark bg-dark">
  <div class="container">
    <a class="navbar-brand fw-bold" href="/">MediBook</a>
  </div>
</nav>

<div class="container py-5" style="max-width: 700px;">

  <h3 class="fw-bold mb-3">Practitioner Application</h3>

  <% if (application) { %>

    <div class="alert alert-info">
      Your application status:
      <strong><%= application.status %></strong>
    </div>

    <% if (application.status === 'pending') { %>
      <p class="text-muted">
        Your application is under review. You will be notified once approved.
      </p>
    <% } %>

    <% if (application.status === 'rejected') { %>
      <p class="text-danger">
        Your application was rejected. You may contact support.
      </p>
    <% } %>

  <% } else { %>

    <form method="POST" action="/practitioner/apply" class="card shadow-sm p-4">

      <div class="mb-3">
        <label class="form-label fw-bold">Service</label>
        <select name="service_id" class="form-select" required>
          <option value="">Select service</option>
          <% services.forEach(s => { %>
            <option value="<%= s.id %>"><%= s.name %></option>
          <% }) %>
        </select>
      </div>

      <div class="mb-3">
        <label class="form-label fw-bold">Bio</label>
        <textarea
          name="bio"
          class="form-control"
          rows="3"
          placeholder="Short professional description"
        ></textarea>
      </div>

      <button class="btn btn-success">
        Submit Application
      </button>

    </form>

  <% } %>

</div>

</body>
</html>
