<!DOCTYPE html>
<html lang="en">
<head>
  <!-- ============================= -->
  <!-- META -->
  <!-- ============================= -->
  <meta charset="UTF-8">
  
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <title>Create Account | MediBook</title>

  <!-- ============================= -->
  <!-- BOOTSTRAP CSS -->
  <!-- ============================= -->
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
    rel="stylesheet"
  >

  <!-- ============================= -->
  <!-- PAGE STYLES -->
  <!-- ============================= -->
  <style>
    /* Soft neutral background for medical feel */
    body {
      background: #eef2f5;
    }

    /* Center card vertically + horizontally */
    .register-wrapper {
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    /* Card styling */
    .register-card {
      width: 100%;
      max-width: 420px;
      border-radius: 16px;
      border: none;
    }

    /* Brand styling */
    .brand {
      font-weight: 700;
      color: #2c3e50;
      letter-spacing: 0.5px;
    }

    /* Small subtitle */
    .subtitle {
      font-size: 0.9rem;
      color: #6c757d;
    }

    /* Inputs */
    .form-control {
      border-radius: 10px;
      padding: 10px 12px;
    }

    /* Primary button */
    .btn-primary {
      border-radius: 10px;
      font-weight: 600;
      background-color: #2c7be5;
      border: none;
    }

    .btn-primary:hover {
      background-color: #1a68d1;
    }

    /* Small helper text */
    .password-hint {
      font-size: 12px;
      color: #6c757d;
    }

    .small-link {
      font-size: 0.9rem;
    }
  </style>
</head>

<body>

<!-- ============================= -->
<!-- MAIN WRAPPER -->
<!-- ============================= -->
<div class="register-wrapper">

  <div class="card shadow-sm register-card p-4">

    <!-- ============================= -->
    <!-- HEADER -->
    <!-- ============================= -->
    <div class="text-center mb-4">
      <div class="brand">MediBook</div>
      <div class="subtitle">Patient account</div>
    </div>

    <!-- ============================= -->
    <!-- SERVER ERROR MESSAGE -->
    <!-- ============================= -->
    <% if (error) { %>
      <div class="alert alert-danger py-2">
        <%= error %>
      </div>
    <% } %>

    <!-- ============================= -->
    <!-- REGISTRATION FORM -->
    <!-- ============================= -->
    <form method="POST" action="/register">

      <!-- FULL NAME -->
      <div class="mb-3">
        <input 
          name="full_name" 
          class="form-control"
          placeholder="Full name"
          value="<%= formData?.full_name || '' %>"
          required>
      </div>

      <!-- EMAIL -->
      <div class="mb-3">
        <input 
          type="email"
          name="email" 
          class="form-control"
          placeholder="Email"
          value="<%= formData?.email || '' %>"
          required>
      </div>

      <!-- PASSWORD -->
      <div class="mb-3">
        <input 
          type="password" 
          name="password" 
          class="form-control"
          placeholder="Password"
          required>
      </div>

      <!-- CONFIRM PASSWORD -->
      <div class="mb-3">
        <input 
          type="password" 
          name="confirm_password" 
          class="form-control"
          placeholder="Confirm password"
          required>
      </div>

      <!-- PASSWORD REQUIREMENTS (SHORT + CLEAN) -->
      <div class="password-hint mb-3">
        8+ characters • Uppercase • Lowercase • Number • Symbol
      </div>

      <!-- SUBMIT BUTTON -->
      <div class="d-grid">
        <button class="btn btn-primary">
          Create account
        </button>
      </div>

    </form>

    <!-- ============================= -->
    <!-- NAVIGATION LINKS -->
    <!-- ============================= -->
    <div class="text-center mt-4 small-link">
      Already have an account?
      <a href="/login" class="text-decoration-none fw-semibold">
        Login
      </a>
    </div>

    <div class="text-center mt-2 small-link">
      Practitioner?
      <a href="/practitioner/register" class="text-decoration-none">
        Apply here
      </a>
    </div>

  </div>

</div>

</body>
</html>
