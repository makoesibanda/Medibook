<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <title>Manage Services | MediBook</title>

  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
    rel="stylesheet"
  >
</head>

<body class="bg-light">

<nav class="navbar navbar-dark bg-dark">
  <div class="container">
    <span class="navbar-brand">MediBook Admin</span>
    <a href="/admin" class="btn btn-sm btn-outline-light">Back</a>
  </div>
</nav>

<div class="container py-5">

  <h3 class="mb-4 fw-bold">Manage Services</h3>

  <!-- ==============================
       CREATE SERVICE FORM
  ============================== -->
  <div class="card mb-4 p-4 shadow-sm">
    <h6 class="mb-3">Create New Service</h6>

    <form method="POST" action="/admin/services">
      <div class="row g-3">

        <!-- Service Name -->
        <div class="col-12 col-md-4">
          <input
            type="text"
            name="name"
            class="form-control"
            placeholder="Service Name"
            required
          >
        </div>

        <!-- Price -->
        <div class="col-12 col-md-3">
          <input
            type="number"
            step="0.01"
            name="price"
            class="form-control"
            placeholder="Price"
            required
          >
        </div>

        <!-- Duration -->
        <div class="col-12 col-md-3">
          <input
            type="number"
            name="duration_minutes"
            class="form-control"
            placeholder="Duration (minutes)"
            required
          >
        </div>

        <!-- Create Button -->
        <div class="col-12 col-md-2">
          <button class="btn btn-primary w-100">
            Create
          </button>
        </div>

      </div>
    </form>
  </div>

  <!-- ==============================
       SERVICES TABLE
  ============================== -->
  <div class="card p-4 shadow-sm">
    <h6 class="mb-3">Existing Services</h6>

    <% if (services.length === 0) { %>

      <p class="text-muted">No services created yet.</p>

    <% } else { %>

      <!-- Makes table scroll on small screens -->
      <div class="table-responsive">

        <table class="table table-bordered table-sm align-middle">
          <thead class="table-light">
            <tr>
              <th>Name</th>
              <th>Price</th>
              <th>Duration</th>
              <th class="text-center" style="width: 120px;">Action</th>
            </tr>
          </thead>

          <tbody>

            <% services.forEach(service => { %>
              <tr>
                <td class="fw-semibold"><%= service.name %></td>
                <td>Â£<%= service.price %></td>
                <td><%= service.duration_minutes %> mins</td>
                <td class="text-center">
                  <form method="POST" action="/admin/services/<%= service.id %>/delete">
                    <button class="btn btn-sm btn-danger w-100">
                      Delete
                    </button>
                  </form>
                </td>
              </tr>
            <% }) %>

          </tbody>
        </table>

      </div>

    <% } %>

  </div>

</div>

</body>
</html>
