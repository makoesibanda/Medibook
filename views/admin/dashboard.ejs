<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Admin Dashboard | MediBook</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
    rel="stylesheet"
  >

  <style>
    body {
      background-color: #f4f6f9;
    }

    .admin-card {
      border-radius: 18px;
      border: none;
      transition: 0.2s ease-in-out;
    }

    .admin-card:hover {
      transform: translateY(-4px);
      box-shadow: 0 10px 25px rgba(0,0,0,0.08);
    }

    .hero {
      background: linear-gradient(135deg, #343a40, #212529);
      color: white;
      border-radius: 18px;
      padding: 28px;
    }
  </style>
</head>
<body>

<nav class="navbar navbar-dark bg-dark">
  <div class="container">
    <span class="navbar-brand fw-bold">MediBook Admin</span>
    <a href="/logout" class="btn btn-danger btn-sm">Logout</a>
  </div>
</nav>

<div class="container py-5">

  <!-- Hero -->
  <div class="hero mb-5 shadow-sm">
    <h4 class="fw-bold mb-1">
      Welcome, <%= user.full_name %>
    </h4>
    <small>System Administrator Panel</small>
  </div>

  <div class="row g-4">

    <!-- Manage Services -->
    <div class="col-md-4">
      <div class="card admin-card shadow-sm p-4 text-center">
        <h6 class="fw-bold">Services</h6>
        <p class="text-muted small">Create and manage healthcare services.</p>
        <a href="/admin/services" class="btn btn-primary w-100">
          Manage Services
        </a>
      </div>
    </div>

    <!-- Manage Practitioners -->
<div class="col-md-4">
  <div class="card admin-card shadow-sm p-4 text-center">
    <h6 class="fw-bold">Practitioners</h6>
    <p class="text-muted small">
      Manage practitioner roles and assigned services.
    </p>
    <a href="/admin/practitioners" class="btn btn-info w-100">
      Manage Practitioners
    </a>
  </div>
</div>

<!-- Manage Users -->
<div class="col-md-4">
  <div class="card admin-card shadow-sm p-4 text-center">
    <h6 class="fw-bold">Users</h6>
    <p class="text-muted small">
      View all registered users and manage roles.
    </p>
    <a href="/admin/users" class="btn btn-secondary w-100">
      Manage Users
    </a>
  </div>
</div>



    <!-- Practitioner Applications -->
    <div class="col-md-4">
      <div class="card admin-card shadow-sm p-4 text-center">
        <h6 class="fw-bold">Applications</h6>
        <p class="text-muted small">Approve or reject practitioner applications.</p>
        <a href="/admin/applications" class="btn btn-warning w-100">
          View Applications
        </a>
      </div>
    </div>

    <!-- View All Bookings -->
    <div class="col-md-4">
      <div class="card admin-card shadow-sm p-4 text-center">
        <h6 class="fw-bold">All Bookings</h6>
        <p class="text-muted small">Monitor all system bookings.</p>
        <a href="/admin/bookings" class="btn btn-success w-100">
          View Bookings
        </a>
      </div>
    </div>

    <!-- Manage Availability -->
    <div class="col-md-4">
      <div class="card admin-card shadow-sm p-4 text-center">
        <h6 class="fw-bold">Availability</h6>
        <p class="text-muted small">Control practitioner working hours.</p>
        <a href="/admin/availability" class="btn btn-dark w-100">
          Manage Availability
        </a>
      </div>
    </div>

  </div>

</div>

</body>
</html>
